<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
  <defs>
    <radialGradient id="glow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" stop-color="#7c6ef5" stop-opacity="0.4"/>
      <stop offset="100%" stop-color="#7c6ef5" stop-opacity="0"/>
    </radialGradient>
    <radialGradient id="hole" cx="50%" cy="50%" r="50%">
      <stop offset="50%" stop-color="#000"/>
      <stop offset="100%" stop-color="#7c6ef5" stop-opacity="0.4"/>
    </radialGradient>
  </defs>
  
  <!-- Background glow -->
  <circle cx="16" cy="16" r="15" fill="url(#glow)"/>
  
  <!-- Outer ring -->
  <circle cx="16" cy="16" r="13" fill="none" stroke="#7c6ef5" stroke-opacity="0.4" stroke-width="0.5"/>
  
  <!-- Middle ring -->
  <circle cx="16" cy="16" r="10" fill="none" stroke="#7c6ef5" stroke-opacity="0.6" stroke-width="0.5"/>
  
  <!-- Inner glow -->
  <circle cx="16" cy="16" r="7" fill="url(#glow)"/>
  
  <!-- Event horizon -->
  <circle cx="16" cy="16" r="5" fill="url(#hole)"/>
  
  <!-- Photon ring -->
  <circle cx="16" cy="16" r="5.5" fill="none" stroke="#a89bff" stroke-opacity="0.6" stroke-width="0.5"/>
  
  <!-- Orbiting particles -->
  <circle cx="16" cy="4" r="1.2" fill="#fff"/>
  <circle cx="24" cy="20" r="1" fill="#7c6ef5"/>
</svg>
